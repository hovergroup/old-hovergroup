SOFT_CONFIG["KESTREL:RETURN_PT"]="20,-15"
SOFT_CONFIG["KESTREL:ACOMMSID"]="4"
SOFT_CONFIG["KESTREL:RUDDER_OFFSET"]="0"
SOFT_CONFIG["KESTREL:SPEED"]=$CRUISESPEED

#icarus configuration
ACOMMSID_ICARUS="1"
