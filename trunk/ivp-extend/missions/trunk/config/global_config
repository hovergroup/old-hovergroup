#!/bin/bash

SHOREHOST="192.168.1.100"
CRUISESPEED=2

#icarus configuration
VNAME_ICARUS="icarus"
VHOST_ICARUS="192.168.1.102"
VPORT_ICARUS="9300"
LPORT_ICARUS="9301"
ACOMMSID_ICARUS="1"
MODEMPORT_ICARUS="/dev/ttyUSB0"
GPSPORT_ICARUS="/dev/ttyUSB1"
GPSBAUD_ICARUS="57600"

#silvana configuration
VNAME_SILVANA="silvana"  # The second vehicle Community
VHOST_SILVANA="192.168.1.104"
VPORT_SILVANA="9200"
LPORT_SILVANA="9201"
RETURN_PT_SILVANA="10,-20"
ACOMMSID_SILVANA="2"
MODEMPORT_SILVANA="/dev/ttyUSB0"
OS5000PORT_SILVANA="/dev/ttyUSB1"
GPSPORT_SILVANA="/dev/ttyACM0"
GPSBAUD_SILVANA="57600"
RUDDER_OFFSET_SILVANA="0"
SPEED_SILVANA=$CRUISESPEED

VNAME3="nostromo"  # The third vehicle Community
VHOST3="192.168.1.103"
VPORT3="9100"
LPORT3="9101"
RETURN_PT3="30,-10"
ACOMMSID_NOSTROMO="3"
MODEMPORT_NOSTROMO="/dev/ttyUSB0"
OS5000PORT_NOSTROMO="/dev/ttyUSB2"
GPSPORT_NOSTROMO="/dev/ttyUSB1"
GPSBAUD_NOSTROMO="57600"
RUDDER_OFFSET_NOSTROMO="2"
SPEED_SILVANA=$CRUISESPEED